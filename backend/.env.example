# Server Configuration
PORT=8000
ENVIRONMENT=production
ENABLE_RELOAD=false  # Set to 'true' for development hot-reload

# Database Configuration (Supabase PostgreSQL)
# IMPORTANT: The original DATABASE_URL was leaked in git history and the password has been changed
DATABASE_URL=postgresql://postgres.your-project:your-password@aws-0-region.pooler.supabase.com:6543/postgres

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Kubernetes Configuration (optional - for code execution)
KUBERNETES_NAMESPACE=default
KUBERNETES_IN_CLUSTER=false  # Set to 'true' when running inside Kubernetes cluster

# Session Configuration
SESSION_TIMEOUT=3600
MAX_FILE_SIZE=1048576

# WebSocket Configuration
# User ID is passed as query parameter: ws://localhost:8000/ws?user_id=123
